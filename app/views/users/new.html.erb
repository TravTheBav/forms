-->

<%= form_with model: @user do |form| %>
  <%= form.label :email, "Your email" %>
  <%= form.email_field :email, value: "example@gmail.com"%>

  <%= form.label :username %>
  <%= form.text_field :username, value: "CoolUserName123" %>

  <%= form.label :password %>
  <%= form.password_field :password, value: "" %>

  <%= form.submit "create user" %>
<% end %>
